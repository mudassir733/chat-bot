generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  email     String     @unique
  password  String
  googleId  String     @unique
  avatar    String?
  createdAt DateTime   @default(now())
  ChatList  ChatList[]
}

model ChatList {
  id        Int      @id @default(autoincrement())
  listName  String?  @default("new chat")
  username  String?
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime
}
